<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".v.productReturn.ReturnProductInfoFragment">

    <TextView
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:text="@string/product_return_info" />
    <LinearLayout
        android:background="@color/gray_c10"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/return_content_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:background="@color/gray_c10"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/return_content_phone"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginLeft="15dp"
        android:text="联系电话:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/return_content_reason"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginLeft="15dp"
        android:text="退货原因:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/return_content_descibe"
        android:paddingTop="7dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="15dp"
        android:text="退货说明:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/return_content_money"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="15dp"
        android:text="退款金额:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/return_content_code"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="15dp"
        android:text="退款货编号:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/return_content_img_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>