<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_88"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/commit_edt_remark_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginRight="@dimen/order_details_margin_horizontal"
        android:text="@string/order_commit_txt_remark_tag"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_m"
        app:layout_constraintBottom_toBottomOf="@+id/commit_edt_remark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/commit_edt_remark"/>

    <com.a1magway.bgg.widget.EditInRecycler
        android:id="@+id/commit_edt_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_vertical"
        android:layout_marginRight="@dimen/order_details_margin_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/home_search_edt_bg"
        android:inputType="textMultiLine"
        android:lines="2"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/text_grey"
        android:textSize="@dimen/text_size_m"
        app:layout_constraintLeft_toRightOf="@+id/commit_edt_remark_tag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:hint="@string/order_commit_hint_remark"
        tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>

    <View
        android:id="@+id/commit_v_divider_13"
        style="@style/ConstrainLayout_Param_Full_Width"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/order_details_margin_vertical"
        android:background="@color/bg_page"
        app:layout_constraintTop_toBottomOf="@+id/commit_edt_remark"/>

    <TextView
        android:id="@+id/commit_txt_pro_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginTop="13dp"
        android:textColor="@color/text_grey"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commit_v_divider_13"
        tools:text="商品金额：￥100000000"/>

    <TextView
        android:id="@+id/commit_txt_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_grey"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commit_txt_pro_price"
        tools:text="税费：￥2000000"/>

    <TextView
        android:id="@+id/commit_txt_freight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_grey"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commit_txt_tax"
        tools:text="运费：￥2000000"/>


    <TextView
        android:id="@+id/commit_txt_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginRight="@dimen/order_details_margin_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_s"
        app:layout_constraintBaseline_toBaselineOf="@+id/commit_txt_freight"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="合计：￥200000000"/>

    <TextView
        android:id="@+id/commit_txt_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_s"
        app:layout_constraintBottom_toTopOf="@+id/commit_txt_total_price"
        app:layout_constraintRight_toRightOf="@+id/commit_txt_total_price"
        tools:text="3件商品"/>

    <View
        android:id="@+id/commit_v_divider_14"
        style="@style/ConstrainLayout_Param_Full_Width"
        android:layout_height="8dp"
        android:layout_marginTop="13dp"
        android:background="@color/bg_page"
        app:layout_constraintTop_toBottomOf="@+id/commit_txt_freight"/>
</android.support.constraint.ConstraintLayout>
