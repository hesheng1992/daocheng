<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/return_product_is_select"
        android:src="@mipmap/is_select_normal"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:id="@+id/return_product_goods_img"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="90dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/return_product_name"
            android:textSize="13sp"
            android:text="ASHLEY GRAHAM X MARCCCCCCC"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/return_product_dec"
            android:textSize="13sp"
            android:text="中文中文中文"
            android:singleLine="true"
            android:textColor="@color/gray_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/return_product_color"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:background="@color/black"
                android:textSize="13sp"
                android:text="黑色"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/return_product_size"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_marginLeft="10dp"
                android:background="@color/black"
                android:textSize="13sp"
                android:text="xmll"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/return_product_money"
            android:textSize="13sp"
            android:text="成交价：$ 1555.00"
            android:singleLine="true"
            android:textColor="@color/gray_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>