<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/member_card_time"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/item_product_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@color/secondaryColor" />

            <LinearLayout
                android:id="@+id/product_profit_layout"
                android:layout_width="55dp"
                android:layout_height="46dp"
                android:layout_gravity="right"
                android:background="@drawable/ic_income_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_product_profit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="¥00"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_product_profit_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进账"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_product_brand"
                style="@style/TextView.2Line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BALENCIAGA"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_product_title"
                style="@style/TextView.2Line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="绝对是开发阶段开始放"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/item_product_price_original"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="￥18888"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_smallest" />

                <TextView
                    android:id="@+id/item_product_price_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="￥15000"
                    android:textColor="@color/text_red"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/item_product_chb"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:button="@drawable/radio_button_selector"
        android:visibility="gone" />


    <TextView
        android:id="@+id/item_product_sale_out_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_36"
        android:gravity="center"
        android:text="商品\n售罄"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_product_down_sale"
        android:visibility="gone"
        android:background="#66000000"
        android:textColor="@color/white"
        android:text="已下架"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
