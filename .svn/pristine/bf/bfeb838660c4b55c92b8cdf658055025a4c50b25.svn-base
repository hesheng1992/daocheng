<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_88">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--app:layout_constraintDimensionRatio="W,360:351"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"-->
            <com.a1magway.bgg.widget.banner.BannerView
                android:id="@+id/info_banner"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                tools:background="@color/red" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/info_v_banner_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <LinearLayout
                    android:id="@+id/lly_ping_tuan_down_time"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/gray_ee"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.a1magway.bgg.widget.PingtuanCountDownTextView
                        android:id="@+id/product_detail_tv_down_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        tools:text="08天 00:00:00" />

                </LinearLayout>

                <TextView
                    android:id="@+id/info_brand_tv"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lly_ping_tuan_down_time"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="ADHHFKDKKJIJIJIHJ" />

                <TextView
                    android:id="@+id/info_title_tv"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_brand_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="粉色丝绒珍珠刺绣水波纹卡包" />

                <LinearLayout
                    android:id="@+id/info_layout_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_title_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/info_txt_origin_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/product_details_txt_price_grey"
                        android:textSize="@dimen/text_size_smallest"
                        tools:ignore="RtlHardcoded"
                        tools:text="￥13667" />

                    <TextView
                        android:id="@+id/info_txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/text_size_s"
                        tools:text="￥4888" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/details_info_collect_layout"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/lly_ping_tuan_down_time"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/details_info_collect_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:clickable="false"
                        android:src="@drawable/ic_product_collecte_normal" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/main_tab_bar_divide"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/main_tab_bar"
                android:background="@color/bg_page" />

            <TextView
                android:id="@+id/info_txt_product_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:text="商品简介怎么好好好好好好好偶发发的发链接了发牢骚打飞机老师附近的拉萨 "
                android:textColor="@color/text_black"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/info_layout_price"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:id="@+id/lly_ping_tuan_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/white">

                    <View
                        android:id="@+id/line4"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/gray_ee" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_below="@+id/line4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本商品为拼团商品，拼成人数为:"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/pingtuan_current_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1人"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lly_ping_tuan_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/gray_ee">

                    <ImageView
                        android:id="@+id/pingtuan_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/detail_pingtuan_icon" />

                    <TextView
                        android:id="@+id/pingtuan_current_much_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@id/pingtuan_icon"
                        android:text="0人已发起拼团，可直接参与"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/pingtuan_img_look_more"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_arrow_enable" />

                    <TextView
                        android:id="@+id/pingtuan_img_look_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="6dp"
                        android:layout_toStartOf="@id/pingtuan_img_look_more"
                        android:text="查看更多"
                        android:textSize="10sp" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/pingtuan_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="@color/gray_ee"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/info_txt_store_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_product_detail_intro"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_smallest"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/info_layout_price"
                    tools:ignore="RtlHardcoded"
                    tools:text="国内仓发货" />

                <TextView
                    android:id="@+id/info_txt_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_smallest"
                    app:layout_constraintBottom_toBottomOf="@+id/info_layout_discount"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="当前库存：3" />

            </LinearLayout>

            <com.a1magway.bgg.widget.sku.AllSkuLayout
                android:id="@+id/info_layout_all_sku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/info_layout_discount" />


            <TextView
                android:id="@+id/info_txt_price_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:text="@string/product_detail_txt_price_intro"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_smallest"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/info_layout_discount"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_txt_store_info"
                tools:ignore="RtlHardcoded" />


            <LinearLayout
                android:id="@+id/info_layout_discount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_layout_price">

                <TextView
                    android:id="@+id/info_txt_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_size_m"
                    tools:text="15% OFF" />
            </LinearLayout>


            <View
                android:id="@+id/info_divider_size_intro_top"
                style="@style/FullLine_View"
                android:layout_height="@dimen/product_detail_divider"
                android:background="@color/product_details_divider"
                app:layout_constraintTop_toBottomOf="@+id/info_layout_all_sku" />

            <TextView
                android:id="@+id/info_txt_size_intro"
                style="@style/ConstrainLayout_Param_Full_Width"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:paddingBottom="12dp"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:text="@string/product_detail_txt_size_intro"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_m"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/info_divider_size_intro_top" />


            <View
                android:id="@+id/info_divider_size_intro_bottom"
                style="@style/FullLine_View"
                android:layout_height="@dimen/product_detail_divider"
                android:background="@color/product_details_divider"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/info_txt_size_intro" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/details_info_layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:visibility="gone">


        <ImageView
            android:id="@+id/details_info_img_back"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_left" />


        <TextView
            android:id="@+id/details_info_cart_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:drawableLeft="@mipmap/ic_add_cart"
            android:drawablePadding="9dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="RtlHardcoded" />
    </FrameLayout>
</FrameLayout>
