<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/return_product_is_select"
        android:src="@mipmap/is_select_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/return_product_goods_img"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_return_goods"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="7dp"
            android:background="@drawable/shape_return_goods_text"
            android:gravity="center"
            android:padding="5dp"
            android:text="退货中..."
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="visible" />
    </FrameLayout>

    


    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/return_product_name"
            android:textSize="13sp"
            android:text="ASHLEY GRAHAM X MARCCCCCCC"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/return_product_dec"
            android:textSize="13sp"
            android:text="中文中文中文"
            android:singleLine="true"
            android:textColor="@color/gray_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/return_product_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:singleLine="true"
                android:text="黑色"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/return_product_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/return_product_color"
                android:background="@color/black"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:singleLine="true"
                android:text="xmll"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_show_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="X1" />
        </RelativeLayout>
        <TextView
            android:id="@+id/return_product_money"
            android:textSize="13sp"
            android:text="成交价：$ 1555.00"
            android:singleLine="true"
            android:textColor="@color/gray_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>