<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.a1magway.bgg.v.member.MemberGoodsActivity">

    <com.a1magway.bgg.refactor.AppRefreshLayout
        android:id="@+id/layout_refresh_member_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.a1magway.bgg.refactor.LoadingView
            android:id="@+id/view_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_member_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
        </com.a1magway.bgg.refactor.LoadingView>
    </com.a1magway.bgg.refactor.AppRefreshLayout>

    <include layout="@layout/include_full_loading"/>
</LinearLayout>
