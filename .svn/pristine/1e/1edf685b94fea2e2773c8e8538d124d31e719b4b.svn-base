<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/pay_hint_select"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_m"/>

        <TextView
            android:id="@+id/pay_txt_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/black"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="@string/pay_txt_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_l"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/bg_page"/>

    <RadioGroup
        android:id="@+id/pay_rgroup_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/pay_rbtn_alipay"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/pay_rbtn_alipay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:button="@null"
            android:drawableLeft="@drawable/ic_pay_type_alipay"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/radio_button_selector"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="50dp"
            android:text="@string/pay_alipay"
            android:textColor="@color/text_black"
            android:textSize="13sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_page"/>

        <RadioButton
            android:id="@+id/pay_rbtn_wechat"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:button="@null"
            android:drawableLeft="@drawable/ic_pay_type_wx"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/radio_button_selector"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="50dp"
            android:text="@string/pay_wechat"
            android:textColor="@color/text_black"
            android:textSize="13sp"/>
    </RadioGroup>

</LinearLayout>
