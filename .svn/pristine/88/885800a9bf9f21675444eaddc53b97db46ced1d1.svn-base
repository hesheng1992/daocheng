<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_invite_friend_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_icon" />

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/item_invite_friend_icon"
        app:layout_constraintTop_toBottomOf="@id/item_invite_friend_icon" />

    <TextView
        android:id="@+id/item_invite_friend_btn"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@drawable/invite_friend_btn_bg"
        android:gravity="center"
        android:text="邀请"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/item_invite_friend_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_invite_friend_icon" />


    <TextView
        android:id="@+id/item_invite_friend_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/item_invite_friend_icon"
        app:layout_constraintTop_toBottomOf="@id/item_invite_friend_icon"
        app:layout_constraintStart_toEndOf="@id/item_invite_friend_icon"
        tools:text="小白哎呀呀" />


    <TextView
        android:visibility="gone"
        android:id="@+id/item_invite_friend_much_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/item_invite_friend_icon"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:text="好友等级：时尚买手" />

</android.support.constraint.ConstraintLayout>