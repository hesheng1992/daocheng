<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".v.productReturn.ProductReturnSelectActivity">
    <com.a1magway.bgg.widget.TitleBar
        android:id="@+id/apply_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/product_return_apply" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_marginBottom="44dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:background="@color/gray_c10"
        android:layout_width="match_parent"
        android:layout_height="15dp">
    </LinearLayout>
    <TextView
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:text="@string/product_return_good"
        android:layout_width="match_parent"
        android:layout_height="44dp" />
    <LinearLayout
        android:background="@color/gray_c10"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/select_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <ImageView
                    android:id="@+id/return_product_all_select"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/is_select_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_marginLeft="15dp"
                    android:text="全选"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/return_product_select"
                    android:layout_marginRight="15dp"
                    android:text="已选商品：0"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/gray_c10"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/apply_money_tv"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:text="退款金额："
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/apply_count_tv"
                    android:textColor="@color/gray_normal"
                    android:paddingRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="已选商品数量："
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:background="@color/gray_c10"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:text="联系电话： "
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/apply_phone_et"
                    android:textSize="13sp"
                    android:hint="@string/product_return_phone"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:background="@color/gray_c10"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>



            <LinearLayout
                android:id="@+id/apply_reason_layout"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:text="退款原因"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_refund"/>

                <TextView
                    android:id="@+id/apply_reason_tv"
                    android:textColor="@color/gray_normal"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="请选择"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:paddingRight="15dp"
                    android:src="@mipmap/onclick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:background="@color/gray_c10"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:text="退款说明： "
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_reason_dec"/>

                <EditText
                    android:id="@+id/apply_describe_tv"
                    android:textSize="13sp"
                    android:hint="@string/product_return_reason"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:background="@color/gray_c10"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:text="上传凭证："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/gray_normal"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="你需要上传问题凭证，便于我们判断问题"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--上传图片-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                >
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pic_recycler"
                    >

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>


            <View
                android:background="@color/gray_c10"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center">
                <CheckBox
                    android:id="@+id/return_product_is_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    style="@style/mycheckbox"
                    android:background="@null"
                    android:checked="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售后须知"
                    android:textSize="12sp"
                    android:id="@+id/text_buy_nocation"
                    android:textColor="@color/color_ff999999"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_marginBottom="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/apply_img_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>


        </LinearLayout>


    </ScrollView>

        <Button
            android:id="@+id/apply_ok_btn"
            android:text="@string/product_return_apply_ok"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_gravity="bottom"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
    </FrameLayout>
</LinearLayout>