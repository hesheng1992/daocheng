<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@color/white">

    <View
        android:layout_width="400dp"
        android:layout_height="1dp"/>


    <ImageView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/invite_friend_buy_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_cart_delete_circle"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/invite_friend_buy_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_share_img_no_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/invite_friend_buy_close" />


    <TextView
        android:id="@+id/invite_friend_buy_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/invite_friend_buy_text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_friend_buy_icon" />


    <TextView
        android:id="@+id/invite_friend_buy_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/invite_friend_buy_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_friend_buy_text1" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_normal"
        app:layout_constraintTop_toBottomOf="@+id/invite_friend_buy_text2" />


    <TextView
        android:id="@+id/invite_friend_buy_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/invite_friend_buy_text3"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/line1" />


    <TextView
        android:id="@+id/invite_friend_buy_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_friend_buy_text3"
        tools:text="剩余时间: 23:59:59" />


</android.support.constraint.ConstraintLayout>