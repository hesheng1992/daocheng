<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.a1magway.bgg.v.login.PasswordResetActivity"
    >

  <TextView
      android:id="@+id/set_pwd_tip_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="56dp"
      android:layout_marginTop="62dp"
      android:textSize="@dimen/text_size_s"
      android:textColor="@color/black"
      android:text="@string/set_pwd_tip"
      />

  <com.a1magway.bgg.widget.ClearEditText
      android:id="@+id/set_pwd_edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/login_edt_margin"
      android:layout_marginRight="@dimen/login_edt_margin"
      android:layout_marginTop="12dp"
      app:digits="@string/common_pwd_filter"
      app:hint="@string/set_pwd_hint"
      app:inputType="password"
      app:maxLength="@integer/pwd_max_length"
      >

  </com.a1magway.bgg.widget.ClearEditText>

  <com.a1magway.bgg.widget.ClearEditText
      android:id="@+id/set_pwd_repeat_edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/login_edt_margin"
      android:layout_marginRight="@dimen/login_edt_margin"
      android:layout_marginTop="@dimen/login_edt_margin_bottom"
      app:digits="@string/common_pwd_filter"
      app:hint="@string/set_pwd_hint_again"
      app:inputType="password"
      app:maxLength="@integer/pwd_max_length"
      >

  </com.a1magway.bgg.widget.ClearEditText>

  <CheckBox
      style="@style/PwdTipCheckBox"
      android:id="@+id/set_pwd_checkBox"
      />

  <Button
      style="@style/Common_Btn_Style"
      android:id="@+id/set_pwd_btn"
      android:layout_marginLeft="@dimen/common_btn_margin"
      android:layout_marginRight="@dimen/common_btn_margin"
      android:enabled="false"
      android:text="@string/common_next_step"
      />

</LinearLayout>
