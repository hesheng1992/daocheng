<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".v.productReturn.ReturnProductInfoFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/product_return_info" />
            <LinearLayout
                android:background="@color/gray_c10"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginLeft="12dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/return_content_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <LinearLayout
                android:background="@color/gray_c10"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/return_content_phone"
                    android:paddingTop="7dp"
                    android:layout_marginLeft="15dp"
                    android:text="联系电话:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/return_content_reason"
                    android:paddingTop="7dp"
                    android:layout_marginLeft="15dp"
                    android:text="退货原因:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/return_content_descibe"
                    android:paddingTop="7dp"
                    android:layout_marginLeft="15dp"
                    android:text="退货说明:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/return_content_money"
                    android:paddingTop="7dp"
                    android:layout_marginLeft="15dp"
                    android:text="退款金额:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/return_content_code"
                    android:paddingTop="7dp"
                    android:layout_marginLeft="15dp"
                    android:text="退款货编号:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/return_content_img_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:id="@+id/liner_logs"
                android:visibility="gone">
                <TextView
                    android:id="@+id/text_log_number"
                    android:textSize="16sp"
                    android:textColor="@color/color_ff000000"
                    android:layout_marginLeft="15dp"
                    android:text="寄回物流编号："
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/image_right"
                    android:paddingRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_image_right"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>