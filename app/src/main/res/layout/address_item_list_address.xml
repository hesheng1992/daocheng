<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@drawable/base_press_white_bg"
              android:paddingTop="@dimen/address_item_padding_top"
              android:layout_marginTop="7dp"
              android:paddingBottom="@dimen/address_item_padding_bottom"
              android:paddingRight="@dimen/address_item_padding_right"
              android:paddingLeft="@dimen/address_item_padding_left"
              android:layout_height="wrap_content">
<TextView
    android:id="@+id/address_item_name_tv"
    android:layout_width="match_parent"
    android:textSize="@dimen/text_size_m"
    android:layout_marginBottom="@dimen/address_item_padding_top"
    android:text="传销鸡  18080244671"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/address_item_address_tv"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_m"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/address_item_padding_bottom"
        android:text="@string/app_name"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/address_item_address_detail_tv"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_s"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/address_item_padding_bottom"
        android:text="@string/app_name"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/address_item_post_code_tv"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_s"
        android:layout_width="match_parent"
        android:text="610000"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:paddingTop="@dimen/address_item_padding_bottom"
            android:paddingLeft="5dp"
            android:gravity="bottom"
            android:id="@+id/address_item_default_box"
            android:layout_alignParentLeft="true"
            android:button="@drawable/radio_button_selector"
            android:layout_width="wrap_content"
            android:text="@string/address_default_address"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingTop="@dimen/address_item_padding_bottom"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_cart_edit_pen"
            android:id="@+id/address_item_edit_tv"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:text="@string/address_edit"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingTop="@dimen/address_item_padding_bottom"
            android:drawableLeft="@drawable/ic_cart_delete_circle"
            android:drawablePadding="5dp"
            android:id="@+id/address_item_delete_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="@string/address_delete"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
