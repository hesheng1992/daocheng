<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_special_recommend_banner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_title_count_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/recommend_normal_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="好物推荐"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <FrameLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <com.a1magway.bgg.widget.CountDownTextView
                android:visibility="gone"
                android:id="@+id/recommend_normal_count_down_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="25dp"
                android:background="@color/black"
                android:paddingRight="4dp"
                android:paddingLeft="8dp"
                android:gravity="right|center_vertical"
                android:text="00:00:00"
                android:textColor="@color/yellow"
                android:textSize="16sp" />
            <ImageView
                android:visibility="gone"
                android:src="@drawable/ic_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_e5" />

    <com.a1magway.bgg.widget.RecommendTabLayout
        android:id="@+id/recommend_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_e5" />

</LinearLayout>