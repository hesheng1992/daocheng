<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">


    <EditText
        android:maxLength="11"
        android:id="@+id/input_phone_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:drawableStart="@mipmap/input_phone_icon"
        android:hint="请输入手机号"
        android:inputType="phone" />


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_ee" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp">


        <TextView
            android:id="@+id/send_auth_code"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@color/black"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_l" />


        <EditText
            android:id="@+id/input_auth_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/send_auth_code"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/auth_code"
            android:hint="输入验证码" />

    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="110dp"
        android:background="@color/gray_ee" />


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="@color/black"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_l" />


    <TextView
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="为了您的账号安全，请立即绑定手机号码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>