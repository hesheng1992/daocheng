<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/icon_refound_choose_kuaidi"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff000000"
                android:textSize="16sp"
                android:id="@+id/text_jihui"
                android:text="寄回地址"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_ff333333"
                android:id="@+id/text_receiving_party"
                android:text="收货方："
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_ff333333"
                android:id="@+id/text_receiving_adress"
                android:text="寄回地址："
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_ff333333"
                android:id="@+id/text_receiving_party_number"
                android:text="收货方电话："
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:padding="9dp"
                android:background="@color/color_ffeeeeee"
                android:layout_gravity="center"
                android:id="@+id/liner_wuliu"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_choose_wuliu"
                    android:background="@color/color_ffeeeeee"
                    android:text="物流公司"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginLeft="6dp"
                android:hint="请输入寄回商品的物流编号"
                android:background="@color/color_ffeeeeee"
                android:padding="9dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:id="@+id/edit_wuliu_number"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/text_queren"
        android:text="确定"
        android:background="@color/color_ff000000"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />

</LinearLayout>