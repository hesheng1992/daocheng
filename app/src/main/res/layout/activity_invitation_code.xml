<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a1magway.bgg.v.personal.InvitationCodeActivity">

    <ImageView
        android:id="@+id/invitation_code_imag"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@color/black" />

    <TextView
        android:id="@+id/invitation_code_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/invitation_code_imag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="我的邀请码"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/invitation_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/invitation_code_tag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="232dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:visibility="gone"
            android:id="@+id/invitation_code_refresh_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="刷新二维码" />

        <View
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <Button
            android:id="@+id/invitation_code_copy_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="复制邀请码" />
    </LinearLayout>
</RelativeLayout>
