<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_88">

    <TextView
        android:id="@+id/details_txt_pay_way"
        style="@style/ConstrainLayout_Param_Full_Width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginRight="@dimen/order_details_margin_horizontal"
        android:paddingBottom="@dimen/order_details_margin_vertical"
        android:paddingTop="@dimen/order_details_margin_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_s"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="支付方式：支付宝"/>

    <View
        android:id="@+id/details_v_divider_11"
        style="@style/ConstrainLayout_Param_Full_Width"
        android:layout_height="1dp"
        android:background="@color/bg_page"
        app:layout_constraintTop_toBottomOf="@+id/details_txt_pay_way"/>

    <TextView
        android:id="@+id/details_txt_deliver_way"
        style="@style/ConstrainLayout_Param_Full_Width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginRight="@dimen/order_details_margin_horizontal"
        android:layout_marginTop="13dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_s"
        app:layout_constraintTop_toBottomOf="@+id/details_v_divider_11"
        tools:text="物流方式：顺丰"/>

    <TextView
        android:id="@+id/details_txt_deliver_num"
        style="@style/ConstrainLayout_Param_Full_Width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginRight="@dimen/order_details_margin_horizontal"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_s"
        app:layout_constraintTop_toBottomOf="@+id/details_txt_deliver_way"
        tools:text="单号：34289402349082304832048"/>

    <View
        android:id="@+id/details_v_divider_12"
        style="@style/ConstrainLayout_Param_Full_Width"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="@color/bg_page"
        app:layout_constraintTop_toBottomOf="@+id/details_txt_deliver_num"/>

    <TextView
        android:id="@+id/details_txt_remark_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginRight="@dimen/order_details_margin_horizontal"
        android:layout_marginTop="13dp"
        android:text="@string/order_details_txt_remark_tag"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_s"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_v_divider_12"/>

    <TextView
        android:id="@+id/details_txt_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/order_details_margin_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_s"
        app:layout_constraintLeft_toRightOf="@+id/details_txt_remark_tag"
        app:layout_constraintTop_toBottomOf="@+id/details_v_divider_12"
        app:layout_constraintTop_toTopOf="@+id/details_txt_remark_tag"
        tools:text="哈哈哈哈啥地方老师的讲课范德萨范德萨发风刀霜剑联发科第三方说的罚款决定是否"/>

    <View
        android:id="@+id/details_v_divider_13"
        style="@style/ConstrainLayout_Param_Full_Width"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="@color/bg_page"
        app:layout_constraintTop_toBottomOf="@+id/details_txt_remark"/>

    <TextView
        android:id="@+id/details_txt_pro_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginTop="13dp"
        android:textColor="@color/text_grey"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_v_divider_13"
        tools:text="商品金额：￥100000000"/>

    <TextView
        android:id="@+id/details_txt_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_grey"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_txt_pro_price"
        tools:text="税费：￥2000000"/>

    <TextView
        android:id="@+id/details_txt_freight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_grey"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_txt_tax"
        tools:text="运费：￥2000000"/>


    <TextView
        android:id="@+id/details_txt_pay_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_details_margin_horizontal"
        android:layout_marginRight="@dimen/order_details_margin_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_s"
        app:layout_constraintBaseline_toBaselineOf="@+id/details_txt_freight"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="实付款：￥200000000"/>

    <TextView
        android:id="@+id/details_txt_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textColor="@color/text_grey"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/details_txt_pay_price"
        app:layout_constraintRight_toRightOf="@+id/details_txt_pay_price"
        tools:text="合计：￥2000000"/>

    <TextView
        android:id="@+id/details_txt_total_count"
        android:text="1件商品"
        app:layout_constraintRight_toRightOf="@+id/details_txt_total_price"
        app:layout_constraintBottom_toTopOf="@+id/details_txt_total_price"
        android:textColor="@color/text_grey"
        android:textSize="11sp"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/details_v_divider_14"
        style="@style/ConstrainLayout_Param_Full_Width"
        android:layout_height="8dp"
        android:layout_marginTop="13dp"
        android:background="@color/bg_page"
        app:layout_constraintTop_toBottomOf="@+id/details_txt_freight"/>
</android.support.constraint.ConstraintLayout>
