<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/crowdordering_finish_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_cart_delete_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/crowdordering_finish_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:paddingTop="10dp"
        android:text="@string/crowdordering_finish_message"
        app:layout_constraintTop_toBottomOf="@id/crowdordering_finish_close" />


    <View
        android:id="@+id/crowdordering_finish_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_normal"
        app:layout_constraintTop_toBottomOf="@id/crowdordering_finish_message" />


    <TextView
        android:id="@+id/crowdordering_finish_know"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/crowdordering_finish_know"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/crowdordering_finish_line" />


</android.support.constraint.ConstraintLayout>